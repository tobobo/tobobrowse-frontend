<p class="torrent-search">{{input class='search' value=query action='selectFirstTorrent' targetObject=view}}</p>
<p class="torrent-input">{{input class='add-torrent' value=url action='addTorrent'}}</p>
<p class="outbound-links">
  <a href="{{unbound torrents.url}}" target="_blank">Transmission UI</a> -
  <a href="{{unbound torrents.httpURL}}" target="_blank">HTTP File Browser</a> -
  <a href="{{unbound torrents.browserURL}}" target="_blank">File Manager</a>
</p>
<ul class="torrents">
{{#each torrent in filteredTorrents}}
  {{x-torrent torrent=torrent torrents=torrents}}
{{else}}
  {{#if torrents.isLoading}}
    <li>loading torrents...</li>
  {{else}}
    <li>no torrents{{#if query}} found{{/if}}!</li>
  {{/if}}
{{/each}}
</ul>
